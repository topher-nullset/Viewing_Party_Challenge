<div id="new-user-button">
  <% if current_user %>
    <%= button_to "Log Out", logout_path, method: :post %>
  <% else %>
    <%= button_to "Create a New User", register_path, method: :get %>
    <%= button_to "Log In", login_path, method: :get %>
  <% end %>
</div>

<% if current_user %>
  <section id="user-list">
    <h3>Existing Users</h3>
    <ul>
      <% @users.each do |user| %>
        <li id="user-<%= user.id%>"><%= user.email %></li>
      <% end %>
    </ul>
  </section>
<% else %>
Hello!
<% end %>